@model FarmTrack.Models.Inventory

@{
    ViewBag.Title = "Delete Inventory Item";
}

<h2>Delete Inventory Item</h2>
<p>Are you sure you want to delete this item?</p>

<ul>
    <li><strong>Name:</strong> @Model.ItemName</li>
    <li><strong>Category:</strong> @Model.Category</li>
    <li><strong>Quantity:</strong> @Model.Quantity</li>
    <li><strong>Price:</strong> @Model.Notes</li>
</ul>

@using (Html.BeginForm("Delete", "Inventory", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.InventoryId)

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("InventoryList", "Inventory")" class="btn btn-secondary">Cancel</a>
}
