@model FarmTrack.Models.Inventory
@{
    ViewBag.Title = "Edit Inventory Item";
}

<style>
    /* Custom Color Scheme */
    :root {
        --color-earth: #8B7355; /* Primary */
        --color-soil: #654321; /* Secondary */
        --color-foliage: #4CAF50; /* Tertiary */
        --color-wheat: #F5DEB3; /* Accent */
        --color-danger: #FF6B6B; /* Error */
        --color-white: #FFFFFF; /* Neutral */
        --color-bib: #b17474; /* Neutral */
        --color-light-earth: rgba(139, 115, 85, 0.1);
        --color-shadow: rgba(0, 0, 0, 0.15);
        --color-info: #17a2b8;
        --color-warning: #ffc107;
    }

    /* Page Container */
    .page-container {
        padding: 20px;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        min-height: 100vh;
    }

    /* Navigation */
    .navigation {
        margin-bottom: 20px;
    }

    .nav-link {
        color: var(--color-earth);
        text-decoration: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        background: var(--color-light-earth);
        color: var(--color-soil);
        text-decoration: none;
    }

    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, var(--color-wheat), #f0e6c7);
        padding: 25px 30px;
        border-radius: 12px;
        margin-bottom: 30px;
        box-shadow: 0 6px 20px var(--color-shadow);
        border: 1px solid rgba(139, 115, 85, 0.2);
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--color-earth), var(--color-foliage), var(--color-earth));
    }

    .page-header h2 {
        color: var(--color-soil);
        font-weight: 700;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 1.8em;
    }

    .page-header h2 i {
        color: var(--color-earth);
        font-size: 1.1em;
    }

    .page-subtitle {
        color: var(--color-soil);
        opacity: 0.8;
        margin: 0;
        font-size: 1em;
    }

    /* Form Container */
    .form-container {
        background: var(--color-white);
        border: 1px solid var(--color-wheat);
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 8px 25px var(--color-shadow);
        position: relative;
        overflow: hidden;
    }

    .form-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--color-earth), var(--color-foliage), var(--color-earth));
    }

    /* Form Sections */
    .form-section {
        margin-bottom: 30px;
        padding: 20px;
        background: linear-gradient(135deg, rgba(245, 222, 179, 0.05), rgba(245, 222, 179, 0.02));
        border: 1px solid rgba(245, 222, 179, 0.3);
        border-radius: 10px;
        position: relative;
    }

    .form-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--color-foliage);
        border-radius: 2px;
    }

    .section-title {
        color: var(--color-soil);
        font-weight: 600;
        font-size: 1.1em;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .section-title i {
        color: var(--color-earth);
        font-size: 1.2em;
    }

    /* Form Groups */
    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

    .form-group label {
        color: var(--color-soil);
        font-weight: 600;
        display: block;
        margin-bottom: 8px;
        font-size: 0.95em;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Input Group Styling */
    .input-group {
        position: relative;
        display: flex;
        width: 100%;
        box-shadow: 0 2px 8px rgba(139, 115, 85, 0.1);
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .input-group:hover {
        box-shadow: 0 4px 12px rgba(139, 115, 85, 0.2);
        transform: translateY(-1px);
    }

    .input-group-prepend {
        display: flex;
    }

    .input-group-text {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 12px 15px;
        font-size: 1rem;
        color: var(--color-white);
        background: linear-gradient(135deg, var(--color-earth), var(--color-soil));
        border: none;
        min-width: 50px;
    }

    .input-group-text i {
        font-size: 1.1em;
    }

    /* Form Controls */
    .form-control {
        border: 1px solid var(--color-wheat);
        border-left: none;
        border-radius: 0;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: var(--color-white);
        flex: 1;
    }

    .form-control:focus {
        border-color: var(--color-earth);
        box-shadow: none;
        outline: none;
        background: #fefefe;
    }

    .form-control::placeholder {
        color: #999;
        font-style: italic;
    }

    /* Single form control (no input group) */
    .form-control.single {
        border: 1px solid var(--color-wheat);
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(139, 115, 85, 0.1);
        transition: all 0.3s ease;
    }

    .form-control.single:hover {
        box-shadow: 0 4px 12px rgba(139, 115, 85, 0.2);
        transform: translateY(-1px);
    }

    /* Textarea */
    textarea.form-control {
        resize: vertical;
        min-height: 80px;
    }

    /* Static Display */
    .quantity-display {
        background: var(--color-light-earth);
        border: 1px solid var(--color-wheat);
        border-radius: 8px;
        padding: 12px 15px;
        font-weight: 600;
        color: var(--color-earth);
        font-size: 1.1em;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .quantity-display i {
        color: var(--color-foliage);
    }

    .quantity-note {
        font-size: 0.85em;
        color: var(--color-soil);
        opacity: 0.8;
        margin-top: 5px;
        font-style: italic;
    }

    /* Checkbox Styling */
    .checkbox-container {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 15px;
        background: linear-gradient(135deg, rgba(245, 222, 179, 0.1), rgba(245, 222, 179, 0.05));
        border: 1px solid var(--color-wheat);
        border-radius: 8px;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .checkbox-container:hover {
        background: linear-gradient(135deg, rgba(245, 222, 179, 0.2), rgba(245, 222, 179, 0.1));
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(139, 115, 85, 0.15);
    }

    .checkbox-container input[type="checkbox"] {
        width: 18px;
        height: 18px;
        accent-color: var(--color-foliage);
        cursor: pointer;
    }

    .checkbox-label {
        color: var(--color-soil);
        font-weight: 500;
        cursor: pointer;
        margin: 0;
        flex: 1;
    }

    .checkbox-description {
        font-size: 0.85em;
        color: var(--color-soil);
        opacity: 0.7;
        margin-top: 5px;
        font-style: italic;
    }

    /* Form Text */
    .form-text {
        font-size: 0.875rem;
        margin-top: 8px;
        padding: 8px 12px;
        background: rgba(245, 222, 179, 0.3);
        border-radius: 6px;
        border-left: 3px solid var(--color-foliage);
    }

    .text-muted {
        color: var(--color-soil) !important;
        opacity: 0.8;
    }

    /* Buttons */
    .btn {
        border-radius: 8px;
        padding: 12px 20px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
        text-decoration: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--color-earth), var(--color-soil));
        color: var(--color-white);
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, var(--color-soil), #4a3018);
        color: var(--color-white);
    }

    .btn-secondary {
        background: linear-gradient(135deg, #6c757d, #5a6268);
        color: var(--color-white);
    }

    .btn-secondary:hover {
        background: linear-gradient(135deg, #545b62, #495057);
        color: var(--color-white);
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 2px solid var(--color-wheat);
    }

    /* Validation */
    .text-danger {
        color: var(--color-danger) !important;
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
        font-weight: 500;
    }

    .validation-summary-errors {
        color: var(--color-danger);
        background: rgba(255, 107, 107, 0.1);
        border: 1px solid var(--color-danger);
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 25px;
    }

    .validation-summary-errors ul {
        margin-bottom: 0;
        padding-left: 20px;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .page-container {
            padding: 15px;
        }

        .form-container {
            padding: 20px;
        }

        .form-section {
            padding: 15px;
        }

        .action-buttons {
            flex-direction: column;
        }

        .page-header {
            padding: 20px;
        }

        .page-header h2 {
            font-size: 1.5em;
        }
    }

    /* Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-container {
        animation: fadeInUp 0.6s ease-out;
    }

    .form-section {
        animation: fadeInUp 0.4s ease-out;
        animation-fill-mode: both;
    }

    .form-section:nth-child(1) { animation-delay: 0.1s; }
    .form-section:nth-child(2) { animation-delay: 0.2s; }
    .form-section:nth-child(3) { animation-delay: 0.3s; }
    .form-section:nth-child(4) { animation-delay: 0.4s; }
</style>

<div class="page-container">
    <!-- Navigation -->
    <div class="navigation">
        <a href="@Url.Action("InventoryList", "Inventory")" class="nav-link">
            <i class="fas fa-arrow-left"></i>
            Back to Inventory List
        </a>
    </div>

    <!-- Page Header -->
    <div class="page-header">
        <h2>
            <i class="fas fa-edit"></i>
            Edit Inventory Item
        </h2>
        <p class="page-subtitle">Update item details, stock settings, and supplier information</p>
    </div>

    <div class="form-container">
        @using (Html.BeginForm("Edit", "Inventory", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })
            @Html.HiddenFor(model => model.InventoryId)

            <!-- Basic Information Section -->
            <div class="form-section">
                <div class="section-title">
                    <i class="fas fa-info-circle"></i>
                    Basic Information
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ItemName, "Item Name")
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-tag"></i></span>
                        </div>
                        @Html.TextBoxFor(model => model.ItemName, new { @class = "form-control", placeholder = "Enter item name", required = "required" })
                    </div>
                    @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Category, "Category")
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-list"></i></span>
                        </div>
                        @Html.TextAreaFor(model => model.Category, new { @class = "form-control", placeholder = "Enter item category", rows = "2" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Notes, "Notes")
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-sticky-note"></i></span>
                        </div>
                        @Html.TextBoxFor(model => model.Notes, new { @class = "form-control", placeholder = "Additional notes or descriptions" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Stock Information Section -->
            <div class="form-section">
                <div class="section-title">
                    <i class="fas fa-warehouse"></i>
                    Stock Information
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Quantity, "Current Stock Quantity")
                    <div class="quantity-display">
                        <i class="fas fa-boxes"></i>
                        <strong>@Model.Quantity</strong> units
                    </div>
                    <div class="quantity-note">
                        Stock quantity is managed through inventory transactions and cannot be edited directly.
                    </div>
                </div>

                <div class="form-group">
                    <label for="LowStockThreshold">Low Stock Threshold</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-exclamation-triangle"></i></span>
                        </div>
                        <input type="number" class="form-control" name="LowStockThreshold" value="@Model.LowStockThreshold"
                               min="0" placeholder="Alert when stock falls below this number" />
                    </div>
                    <small class="form-text text-muted">
                        <i class="fas fa-info-circle"></i>
                        You'll receive alerts when stock falls below this threshold.
                    </small>
                </div>

                <div class="form-group">
                    <label for="RestockThreshold">Restock Quantity</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-plus-circle"></i></span>
                        </div>
                        <input type="number" class="form-control" name="RestockThreshold" value="@Model.RestockThreshold"
                               min="1" placeholder="Default quantity to restock" />
                    </div>
                    <small class="form-text text-muted">
                        <i class="fas fa-info-circle"></i>
                        Default quantity suggested when creating restock requests for this item.
                    </small>
                </div>
            </div>

            <!-- Supplier & Automation Section -->
            <div class="form-section">
                <div class="section-title">
                    <i class="fas fa-truck"></i>
                    Supplier & Automation
                </div>

                <div class="form-group">
                    <label for="SupplierId">Default Supplier</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-building"></i></span>
                        </div>
                        @Html.DropDownList("SupplierId", new SelectList(ViewBag.Suppliers, "SupplierId", "Name", Model.SupplierId),
                                          "-- Select Default Supplier --", new { @class = "form-control" })
                    </div>
                    <small class="form-text text-muted">
                        <i class="fas fa-info-circle"></i>
                        This supplier will be pre-selected when creating restock requests.
                    </small>
                </div>

                <div class="form-group">
                    <label for="NotifySupplier">Auto Restock Settings</label>
                    <div class="checkbox-container">
                        @Html.CheckBoxFor(model => model.NotifySupplier)
                        <div>
                            <div class="checkbox-label">Enable Auto Restock Notifications</div>
                            <div class="checkbox-description">
                                Automatically notify suppliers when stock falls below the threshold
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Save Changes
                </button>
                <a href="@Url.Action("InventoryList", "Inventory")" class="btn btn-secondary">
                    <i class="fas fa-times"></i>
                    Cancel
                </a>
            </div>
        }
    </div>
</div>

<!-- Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}