@model FarmTrack.Models.Inventory

@{
    ViewBag.Title = "Edit Inventory Item";
}

<h2>Edit Inventory Item</h2>

@using (Html.BeginForm("Edit", "Inventory", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.InventoryId)

    <div class="form-group">
        @Html.LabelFor(model => model.ItemName)
        @Html.TextBoxFor(model => model.ItemName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Category)
        @Html.TextAreaFor(model => model.Category, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Quantity)
        @*@Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", type = "number", })*@
        <strong>@Model.Quantity</strong>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Notes)
        @Html.TextBoxFor(model => model.Notes, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="LowStockThreshold">Low Stock Threshold</label>
        <input type="number" class="form-control" name="LowStockThreshold" value="@Model.LowStockThreshold" />
    </div>

    <div class="form-group">
        <label for="NotifySupplier">Auto Restock</label><br />
        @Html.CheckBoxFor(model => model.NotifySupplier)
    </div>

    <div class="form-group">
        <label for="SupplierId">Supplier</label>
        @Html.DropDownList("SupplierId", new SelectList(ViewBag.Suppliers, "SupplierId", "Name", Model.SupplierId), "Select a supplier", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="RestockThreshold">Restock Quantity</label>
        <input type="number" class="form-control" name="RestockThreshold" value="@Model.RestockThreshold" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("InventoryList", "Inventory")" class="btn btn-secondary">Cancel</a>
}
