@model FarmTrack.Models.Supplier
@{
    ViewBag.Title = "Delete Supplier";
}

<style>
    /* Custom Color Scheme */
    :root {
        --color-earth: #8B7355; /* Primary */
        --color-soil: #654321; /* Secondary */
        --color-foliage: #4CAF50; /* Tertiary */
        --color-wheat: #F5DEB3; /* Accent */
        --color-danger: #FF6B6B; /* Error */
        --color-white: #FFFFFF; /* Neutral */
        --color-light-gray: #f8f9fa; /* Light background */
        --color-warning: #FFA726; /* Warning */
    }

    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, rgba(255, 107, 107, 0.1), rgba(255, 107, 107, 0.05));
        padding: 25px;
        border-radius: 12px;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(255, 107, 107, 0.1);
        border: 2px solid rgba(255, 107, 107, 0.2);
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--color-danger), var(--color-warning));
    }

        .page-header h2 {
            color: var(--color-danger);
            font-weight: 700;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .page-header h3 {
            color: var(--color-soil);
            font-weight: 600;
            margin-bottom: 0;
            font-size: 1.2rem;
            opacity: 0.9;
        }

    /* Warning Alert */
    .warning-alert {
        background: linear-gradient(135deg, rgba(255, 167, 38, 0.1), rgba(255, 167, 38, 0.05));
        border: 2px solid var(--color-warning);
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.02); }
    }

    .warning-alert i {
        color: var(--color-warning);
        font-size: 1.5rem;
    }

    .warning-alert p {
        margin: 0;
        color: var(--color-soil);
        font-weight: 500;
    }

    /* Details Container */
    .details-container {
        background-color: var(--color-white);
        border: 1px solid var(--color-wheat);
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 0 auto 30px auto;
        position: relative;
        overflow: hidden;
    }

    .details-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--color-earth), var(--color-foliage));
    }

    .details-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid var(--color-wheat);
    }

    .details-header h4 {
        color: var(--color-soil);
        font-weight: 700;
        margin: 0;
        font-size: 1.4rem;
    }

    .details-header i {
        color: var(--color-earth);
        font-size: 1.5rem;
    }

    /* Details List Styling */
    .details-list {
        display: grid;
        gap: 20px;
    }

    .detail-item {
        display: flex;
        align-items: flex-start;
        padding: 15px;
        background: linear-gradient(135deg, rgba(245, 222, 179, 0.1), rgba(245, 222, 179, 0.05));
        border-radius: 8px;
        border-left: 4px solid var(--color-earth);
        transition: all 0.3s ease;
    }

    .detail-item:hover {
        transform: translateX(5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .detail-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, var(--color-earth), var(--color-soil));
        color: var(--color-white);
        border-radius: 50%;
        margin-right: 15px;
        flex-shrink: 0;
    }

    .detail-content {
        flex: 1;
    }

    .detail-label {
        font-weight: 600;
        color: var(--color-soil);
        margin-bottom: 5px;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        color: var(--color-soil);
        font-size: 1.1rem;
        font-weight: 500;
        word-break: break-word;
    }

    /* Action Buttons Container */
    .action-container {
        background-color: var(--color-white);
        border: 1px solid rgba(255, 107, 107, 0.2);
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 8px 25px rgba(255, 107, 107, 0.1);
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    .action-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin-top: 20px;
    }

    /* Button Styling */
    .btn {
        border-radius: 8px;
        padding: 12px 24px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 1rem;
        border: none;
        position: relative;
        overflow: hidden;
        min-width: 150px;
        justify-content: center;
    }

    .btn::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        transition: width 0.6s, height 0.6s;
    }

    .btn:hover::before {
        width: 300px;
        height: 300px;
    }

    .btn-danger {
        background: linear-gradient(135deg, var(--color-danger), #e74c3c);
        color: var(--color-white);
        box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);
        }

    .btn-secondary {
        background: linear-gradient(135deg, #6c757d, #5a6268);
        color: var(--color-white);
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
    }

        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(108, 117, 125, 0.4);
            text-decoration: none;
            color: var(--color-white);
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .details-container,
        .action-container {
            margin: 0 15px 30px 15px;
            padding: 20px;
        }

        .action-buttons {
            flex-direction: column;
            gap: 15px;
        }

        .btn {
            width: 100%;
        }

        .detail-item {
            flex-direction: column;
            text-align: center;
        }

        .detail-icon {
            margin-right: 0;
            margin-bottom: 10px;
        }
    }

    /* Animations */
    .details-container {
        animation: slideUp 0.6s ease-out;
    }

    .action-container {
        animation: slideUp 0.8s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Confirmation Modal Effect */
    .action-container {
        position: relative;
    }

    .action-container::after {
        content: '';
        position: absolute;
        top: -2px;
        left: -2px;
        right: -2px;
        bottom: -2px;
        background: linear-gradient(45deg, var(--color-danger), var(--color-warning), var(--color-danger));
        border-radius: 14px;
        z-index: -1;
        opacity: 0.3;
        animation: rotate 3s linear infinite;
    }

    @@keyframes rotate {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>

<!-- Page Header -->
<div class="page-header">
    <h2>
        <i class="fas fa-trash-alt"></i>
        Delete Supplier
    </h2>
    <h3>Are you sure you want to delete this supplier?</h3>
</div>

<!-- Warning Alert -->
<div class="warning-alert">
    <i class="fas fa-exclamation-triangle"></i>
    <p><strong>Warning:</strong> This action cannot be undone. All associated data will be permanently removed.</p>
</div>

<!-- Supplier Details -->
<div class="details-container">
    <div class="details-header">
        <i class="fas fa-truck"></i>
        <h4>Supplier Information</h4>
    </div>

    <div class="details-list">
        <div class="detail-item">
            <div class="detail-icon">
                <i class="fas fa-building"></i>
            </div>
            <div class="detail-content">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Name)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Name)</div>
            </div>
        </div>

        <div class="detail-item">
            <div class="detail-icon">
                <i class="fas fa-user"></i>
            </div>
            <div class="detail-content">
                <div class="detail-label">@Html.DisplayNameFor(model => model.ContactPerson)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.ContactPerson)</div>
            </div>
        </div>

        <div class="detail-item">
            <div class="detail-icon">
                <i class="fas fa-phone"></i>
            </div>
            <div class="detail-content">
                <div class="detail-label">@Html.DisplayNameFor(model => model.PhoneNumber)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.PhoneNumber)</div>
            </div>
        </div>

        <div class="detail-item">
            <div class="detail-icon">
                <i class="fas fa-envelope"></i>
            </div>
            <div class="detail-content">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Email)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Email)</div>
            </div>
        </div>

        <div class="detail-item">
            <div class="detail-icon">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="detail-content">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Address)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Address)</div>
            </div>
        </div>
    </div>
</div>

<!-- Action Buttons -->
<div class="action-container">
    <p style="color: var(--color-soil); font-weight: 500; margin-bottom: 20px;">
        Please confirm that you want to permanently delete this supplier from the system.
    </p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="action-buttons">
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this supplier? This action cannot be undone.');">
                <i class="fas fa-trash-alt"></i>
                Delete Supplier
            </button>
        </div>
    }
</div>

<!-- Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<script>
    // Add confirmation dialog with enhanced styling
    document.addEventListener('DOMContentLoaded', function() {
        const deleteBtn = document.querySelector('.btn-danger');
        if (deleteBtn) {
            deleteBtn.addEventListener('click', function(e) {
                e.preventDefault();
                if (confirm('Are you absolutely sure you want to delete the supplier "@Model.Name"?\n\nThis action cannot be undone and will permanently remove all associated data.')) {
                    this.closest('form').submit();
                }
            });
        }
    });
</script>