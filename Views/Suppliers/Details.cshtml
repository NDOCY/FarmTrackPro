@model FarmTrack.Models.Supplier
@{
    ViewBag.Title = "Supplier Details";
}

<style>
    /* Custom Color Scheme */
    :root {
        --color-earth: #8B7355; /* Primary */
        --color-soil: #654321; /* Secondary */
        --color-foliage: #4CAF50; /* Tertiary */
        --color-wheat: #F5DEB3; /* Accent */
        --color-danger: #FF6B6B; /* Error */
        --color-white: #FFFFFF; /* Neutral */
        --color-light-gray: #f8f9fa; /* Light background */
        --color-info: #17a2b8; /* Info */
    }

    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, var(--color-wheat), #f0e5c7);
        padding: 25px;
        border-radius: 12px;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(139, 115, 85, 0.2);
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--color-earth), var(--color-foliage));
    }

        .page-header h2 {
            color: var(--color-soil);
            font-weight: 700;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .page-header .supplier-name {
            color: var(--color-earth);
            font-size: 1.2rem;
            font-weight: 600;
            margin: 0;
        }

    /* Main Container */
    .details-container {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 30px;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Details Card */
    .details-card {
        background-color: var(--color-white);
        border: 1px solid var(--color-wheat);
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }

    .details-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--color-earth), var(--color-foliage));
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid var(--color-wheat);
    }

    .card-header h4 {
        color: var(--color-soil);
        font-weight: 700;
        margin: 0;
        font-size: 1.4rem;
    }

    .card-header i {
        color: var(--color-earth);
        font-size: 1.5rem;
    }

    /* Details List */
    .details-list {
        display: grid;
        gap: 20px;
    }

    .detail-item {
        display: flex;
        align-items: flex-start;
        padding: 20px;
        background: linear-gradient(135deg, rgba(245, 222, 179, 0.1), rgba(245, 222, 179, 0.05));
        border-radius: 10px;
        border-left: 4px solid var(--color-earth);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .detail-item::after {
        content: '';
        position: absolute;
        top: 0;
        right: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
        transition: right 0.5s;
    }

    .detail-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    .detail-item:hover::after {
        right: 100%;
    }

    .detail-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--color-earth), var(--color-soil));
        color: var(--color-white);
        border-radius: 50%;
        margin-right: 20px;
        flex-shrink: 0;
        box-shadow: 0 4px 15px rgba(139, 115, 85, 0.3);
    }

    .detail-content {
        flex: 1;
    }

    .detail-label {
        font-weight: 600;
        color: var(--color-soil);
        margin-bottom: 8px;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        opacity: 0.8;
    }

    .detail-value {
        color: var(--color-soil);
        font-size: 1.2rem;
        font-weight: 500;
        word-break: break-word;
        line-height: 1.4;
    }

    /* Actions Sidebar */
    .actions-sidebar {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .actions-card {
        background-color: var(--color-white);
        border: 1px solid var(--color-wheat);
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }

    .actions-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--color-info), var(--color-foliage));
    }

    .actions-card h5 {
        color: var(--color-soil);
        font-weight: 700;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    /* Button Styling */
    .btn {
        border-radius: 8px;
        padding: 12px 20px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        font-size: 1rem;
        border: none;
        position: relative;
        overflow: hidden;
        text-align: center;
    }

    .btn::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        transition: width 0.6s, height 0.6s;
    }

    .btn:hover::before {
        width: 300px;
        height: 300px;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--color-earth), var(--color-soil));
        color: var(--color-white);
        box-shadow: 0 4px 15px rgba(139, 115, 85, 0.3);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(139, 115, 85, 0.4);
            text-decoration: none;
            color: var(--color-white);
        }

    .btn-secondary {
        background: linear-gradient(135deg, #6c757d, #5a6268);
        color: var(--color-white);
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
    }

        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(108, 117, 125, 0.4);
            text-decoration: none;
            color: var(--color-white);
        }

    .btn-info {
        background: linear-gradient(135deg, var(--color-info), #138496);
        color: var(--color-white);
        box-shadow: 0 4px 15px rgba(23, 162, 184, 0.3);
    }

        .btn-info:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(23, 162, 184, 0.4);
            text-decoration: none;
            color: var(--color-white);
        }

    /* Stats Card */
    .stats-card {
        background: linear-gradient(135deg, var(--color-foliage), #45a049);
        color: var(--color-white);
        text-align: center;
        position: relative;
    }

    .stats-card::before {
        background: linear-gradient(90deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
    }

    .stats-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 10px;
        display: block;
    }

    .stats-label {
        font-size: 1rem;
        opacity: 0.9;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Contact Actions */
    .contact-actions {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .contact-btn {
        padding: 10px 15px;
        border-radius: 6px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .contact-phone {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
    }

        .contact-phone:hover {
            transform: translateX(5px);
            text-decoration: none;
            color: white;
        }

    .contact-email {
        background: linear-gradient(135deg, #007bff, #6610f2);
        color: white;
    }

        .contact-email:hover {
            transform: translateX(5px);
            text-decoration: none;
            color: white;
        }

    /* Responsive Design */
    @@media (max-width: 992px) {
        .details-container {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .details-card,
        .actions-card {
            margin: 0 15px;
            padding: 20px;
        }
    }

    @@media (max-width: 768px) {
        .detail-item {
            flex-direction: column;
            text-align: center;
        }

        .detail-icon {
            margin-right: 0;
            margin-bottom: 15px;
        }

        .action-buttons {
            gap: 10px;
        }
    }

    /* Animations */
    .details-card {
        animation: slideUp 0.6s ease-out;
    }

    .actions-sidebar {
        animation: slideUp 0.8s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Breadcrumb */
    .breadcrumb-nav {
        margin-bottom: 20px;
    }

    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--color-soil);
    }

    .breadcrumb a {
        color: var(--color-earth);
        text-decoration: none;
        font-weight: 500;
    }

        .breadcrumb a:hover {
            color: var(--color-soil);
            text-decoration: underline;
        }

    .breadcrumb-separator {
        color: var(--color-soil);
        opacity: 0.6;
    }
</style>

<!-- Breadcrumb Navigation -->
<div class="breadcrumb-nav">
    <div class="breadcrumb">
        @Html.ActionLink("Suppliers", "Index")
        <span class="breadcrumb-separator"><i class="fas fa-chevron-right"></i></span>
        <span>Supplier Details</span>
    </div>
</div>

<!-- Page Header -->
<div class="page-header">
    <h2>
        <i class="fas fa-truck"></i>
        Supplier Details
    </h2>
    <p class="supplier-name">@Html.DisplayFor(model => model.Name)</p>
</div>

<!-- Main Content -->
<div class="details-container">
    <!-- Supplier Details -->
    <div class="details-card">
        <div class="card-header">
            <i class="fas fa-info-circle"></i>
            <h4>Supplier Information</h4>
        </div>

        <div class="details-list">
            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-building"></i>
                </div>
                <div class="detail-content">
                    <div class="detail-label">@Html.DisplayNameFor(model => model.Name)</div>
                    <div class="detail-value">@Html.DisplayFor(model => model.Name)</div>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="detail-content">
                    <div class="detail-label">@Html.DisplayNameFor(model => model.ContactPerson)</div>
                    <div class="detail-value">@Html.DisplayFor(model => model.ContactPerson)</div>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-phone"></i>
                </div>
                <div class="detail-content">
                    <div class="detail-label">@Html.DisplayNameFor(model => model.PhoneNumber)</div>
                    <div class="detail-value">@Html.DisplayFor(model => model.PhoneNumber)</div>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <div class="detail-content">
                    <div class="detail-label">@Html.DisplayNameFor(model => model.Email)</div>
                    <div class="detail-value">@Html.DisplayFor(model => model.Email)</div>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <div class="detail-content">
                    <div class="detail-label">@Html.DisplayNameFor(model => model.Address)</div>
                    <div class="detail-value">@Html.DisplayFor(model => model.Address)</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions Sidebar -->
    <div class="actions-sidebar">
        <!-- Quick Actions -->
        <div class="actions-card">
            <h5>
                <i class="fas fa-cogs"></i>
                Quick Actions
            </h5>
            <div class="action-buttons">
                @Html.ActionLink("Edit Supplier", "Edit", new { id = Model.SupplierId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>

        <!-- Contact Actions -->
        <div class="actions-card">
            <h5>
                <i class="fas fa-address-book"></i>
                Contact Options
            </h5>
            <div class="contact-actions">
                <a href="tel:@Html.DisplayFor(model => model.PhoneNumber)" class="contact-btn contact-phone">
                    <i class="fas fa-phone"></i>
                    Call Supplier
                </a>
                <a href="mailto:@Html.DisplayFor(model => model.Email)" class="contact-btn contact-email">
                    <i class="fas fa-envelope"></i>
                    Send Email
                </a>
            </div>
        </div>

        <!-- Statistics Card -->
        <div class="actions-card stats-card">
            <h5>
                <i class="fas fa-chart-bar"></i>
                Quick Stats
            </h5>
            <div class="stats-number">Active</div>
            <div class="stats-label">Supplier Status</div>
        </div>
    </div>
</div>

