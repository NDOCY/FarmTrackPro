@model FarmTrack.Models.TaskUpdate


@{
    ViewBag.Title = "Update Task Status";
    Layout = "~/Views/Shared/_Layout - User.cshtml";
}

<style>
    :root {
        --color-earth: #8B7355;
        --color-soil: #654321;
        --color-foliage: #4CAF50;
        --color-wheat: #F5DEB3;
        --color-danger: #FF6B6B;
        --color-white: #FFFFFF;
    }

    h2 {
        margin-bottom: 25px;
        color: var(--color-soil);
        font-weight: 700;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        color: var(--color-earth);
    }

    .form-control {
        border-radius: 6px;
        border: 1px solid var(--color-wheat);
        padding: 8px 12px;
    }

    .btn-primary {
        background-color: var(--color-soil);
        border-color: var(--color-soil);
        color: var(--color-wheat);
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: var(--color-wheat);
            border-color: var(--color-wheat);
            color: var(--color-soil);
        }

    .validation-message {
        color: var(--color-danger);
        font-size: 0.875em;
    }
</style>

<h2>Update Task Status</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.TaskId)
    @Html.HiddenFor(m => m.UpdatedBy)

<div class="form-group">
    @Html.LabelFor(m => m.TasksStatus)
    @Html.DropDownListFor(m => m.TasksStatus, new SelectList(new[] {
        new { Value = "NotStarted", Text = "Not Started" },
        new { Value = "InProgress", Text = "In Progress" },
        new { Value = "Completed", Text = "Completed" },
        new { Value = "OnHold", Text = "On Hold" }
    }, "Value", "Text"), "-- Select Status --", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.TasksStatus, "", new { @class = "validation-message" })

</div>

    <div class="form-group">
        @Html.LabelFor(m => m.Comments)
        @Html.TextAreaFor(m => m.Comments, new { @class = "form-control", rows = 4 })
        @Html.ValidationMessageFor(m => m.Comments, "", new { @class = "validation-message" })
    </div>

    <button type="submit" class="btn btn-primary">Submit Update</button>
}
