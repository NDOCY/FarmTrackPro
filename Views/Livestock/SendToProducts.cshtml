@model FarmTrack.Models.SendLivestockToProductsViewModel

@{
    ViewBag.Title = "Send Livestock to Products";
}

<style>
    :root {
        --color-earth: #8B7355;
        --color-soil: #654321;
        --color-foliage: #4CAF50;
        --color-wheat: #F5DEB3;
        --color-hay: #DAA520;
        --color-danger: #FF6B6B;
        --border-radius: 12px;
        --card-shadow: 0 6px 18px rgba(0,0,0,0.1);
    }

    body {
        background-color: #F9F7F4;
    }

    .page-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .page-header {
        background: linear-gradient(135deg, var(--color-earth), var(--color-soil));
        color: white;
        padding: 30px;
        border-radius: var(--border-radius);
        margin-bottom: 30px;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 200px;
        height: 100%;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23F5DEB3" opacity="0.1"><path d="M12 2l3.09 6.26L22 9l-6.91 1.01L12 16l-3.09-6.99L2 9l6.91-.74L12 2z"/></svg>');
        background-repeat: no-repeat;
        background-position: right center;
        background-size: 150px;
        opacity: 0.15;
    }

    .page-header h2 {
        font-size: 2rem;
        font-weight: 700;
        margin: 0 0 10px 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .page-header h2 i {
        font-size: 1.8rem;
    }

    .info-card {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        padding: 30px;
        margin-bottom: 25px;
        border: none;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .info-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }

    .info-card h3 {
        color: var(--color-soil);
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid var(--color-wheat);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .livestock-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .detail-item {
        background: rgba(245, 222, 179, 0.15);
        padding: 15px;
        border-radius: 8px;
        border-left: 4px solid var(--color-earth);
    }

    .detail-item strong {
        display: block;
        color: var(--color-soil);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        font-weight: 600;
    }

    .detail-item span {
        color: #333;
        font-size: 1.1rem;
        font-weight: 500;
    }

    .warning-notice {
        background: linear-gradient(135deg, #fff3e0, #ffe0b2);
        border-left: 4px solid #ff9800;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 25px;
        display: flex;
        align-items: start;
        gap: 15px;
    }

    .warning-notice i {
        color: #ff9800;
        font-size: 1.5rem;
        margin-top: 2px;
    }

    .warning-notice p {
        margin: 0;
        color: #5D4037;
        font-weight: 500;
        line-height: 1.6;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: flex-start;
        flex-wrap: wrap;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-success {
        background: linear-gradient(135deg, var(--color-foliage), #45a049);
        color: white;
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #45a049, var(--color-foliage));
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
        color: white;
    }

    .btn-secondary {
        background: linear-gradient(135deg, #9e9e9e, #757575);
        color: white;
        box-shadow: 0 4px 15px rgba(158, 158, 158, 0.3);
    }

    .btn-secondary:hover {
        background: linear-gradient(135deg, #757575, #616161);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(158, 158, 158, 0.4);
        color: white;
    }

    .btn i {
        font-size: 1.1rem;
    }

    @@media (max-width: 768px) {
        .page-container {
            margin: 20px auto;
        }

        .page-header {
            padding: 20px;
        }

        .page-header h2 {
            font-size: 1.5rem;
        }

        .info-card {
            padding: 20px;
        }

        .livestock-details {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="page-container">
    <div class="page-header">
        <h2><i class="fas fa-box-open"></i> Send Livestock to Products</h2>
    </div>

    <div class="info-card">
        <h3><i class="fas fa-horse"></i> Livestock Information</h3>

        <div class="livestock-details">
            <div class="detail-item">
                <strong><i class="fas fa-paw"></i> Type</strong>
                <span>@Model.Type</span>
            </div>
            <div class="detail-item">
                <strong><i class="fas fa-dna"></i> Breed</strong>
                <span>@Model.Breed</span>
            </div>
            <div class="detail-item">
                <strong><i class="fas fa-tag"></i> Tag Number</strong>
                <span>@Model.TagNumber</span>
            </div>
        </div>

        <div class="warning-notice">
            <i class="fas fa-info-circle"></i>
            <p>
                This livestock will be transferred to the Products inventory with a quantity of 1.
                This action will remove the livestock from the active livestock registry and add it as a product item.
            </p>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.LivestockId)

            <div class="action-buttons">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check-circle"></i> Confirm & Send to Products
                </button>
                <a href="@Url.Action("Details", "Livestock", new { id = Model.LivestockId })" class="btn btn-secondary">
                    <i class="fas fa-times-circle"></i> Cancel
                </a>
            </div>
        }
    </div>
</div>