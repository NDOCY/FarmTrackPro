@model FarmTrack.Models.SendLivestockToProductsViewModel

<h2>Send Livestock to Products</h2>

<p>
    <strong>Type:</strong> @Model.Type <br />
    <strong>Breed:</strong> @Model.Breed <br />
    <strong>Tag Number:</strong> @Model.TagNumber
</p>

<p class="text-warning">
    This livestock will be added to Products with quantity = 1.
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.LivestockId)

    <button type="submit" class="btn btn-success">
        <i class="fas fa-box-open"></i> Confirm & Send to Products
    </button>
    <a href="@Url.Action("Details", "Livestock", new { id = Model.LivestockId })" class="btn btn-secondary">Cancel</a>
}
