@model FarmTrack.Models.SendHarvestToProductsViewModel

@{
    ViewBag.Title = "Send Harvest to Products";
}

<style>
    :root {
        --color-earth: #8B7355;
        --color-soil: #654321;
        --color-foliage: #4CAF50;
        --color-wheat: #F5DEB3;
        --color-hay: #DAA520;
        --color-danger: #FF6B6B;
        --border-radius: 12px;
        --card-shadow: 0 6px 18px rgba(0,0,0,0.1);
    }

    body {
        background-color: #F9F7F4;
    }

    .page-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .page-header {
        background: linear-gradient(135deg, var(--color-foliage), #45a049);
        color: white;
        padding: 30px;
        border-radius: var(--border-radius);
        margin-bottom: 30px;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 200px;
        height: 100%;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23FFFFFF" opacity="0.1"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>');
        background-repeat: no-repeat;
        background-position: right center;
        background-size: 150px;
        opacity: 0.15;
    }

    .page-header h2 {
        font-size: 2rem;
        font-weight: 700;
        margin: 0 0 10px 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .page-header h2 i {
        font-size: 1.8rem;
    }

    .page-header p {
        margin: 0;
        opacity: 0.9;
        font-size: 1rem;
    }

    .info-card {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        padding: 30px;
        margin-bottom: 25px;
        border: none;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .info-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }

    .info-card h3 {
        color: var(--color-soil);
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid var(--color-wheat);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .harvest-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .detail-item {
        background: rgba(76, 175, 80, 0.08);
        padding: 15px;
        border-radius: 8px;
        border-left: 4px solid var(--color-foliage);
    }

    .detail-item strong {
        display: block;
        color: var(--color-soil);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        font-weight: 600;
    }

    .detail-item span {
        color: #333;
        font-size: 1.1rem;
        font-weight: 500;
    }

    .quantity-highlight {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .quantity-highlight i {
        color: var(--color-foliage);
        font-size: 1.2rem;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        display: block;
        color: var(--color-soil);
        font-weight: 600;
        font-size: 0.95rem;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: white;
    }

    .form-control:focus {
        border-color: var(--color-foliage);
        outline: none;
        box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
    }

    .text-danger {
        color: var(--color-danger);
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }

    .helper-text {
        color: #666;
        font-size: 0.85rem;
        margin-top: 5px;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .helper-text i {
        color: var(--color-foliage);
    }

    .info-notice {
        background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
        border-left: 4px solid var(--color-foliage);
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 25px;
        display: flex;
        align-items: start;
        gap: 15px;
    }

    .info-notice i {
        color: var(--color-foliage);
        font-size: 1.5rem;
        margin-top: 2px;
    }

    .info-notice p {
        margin: 0;
        color: #2e7d32;
        font-weight: 500;
        line-height: 1.6;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: flex-start;
        flex-wrap: wrap;
        margin-top: 30px;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-success {
        background: linear-gradient(135deg, var(--color-foliage), #45a049);
        color: white;
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #45a049, var(--color-foliage));
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
        color: white;
    }

    .btn-secondary {
        background: linear-gradient(135deg, #9e9e9e, #757575);
        color: white;
        box-shadow: 0 4px 15px rgba(158, 158, 158, 0.3);
    }

    .btn-secondary:hover {
        background: linear-gradient(135deg, #757575, #616161);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(158, 158, 158, 0.4);
        color: white;
    }

    .btn i {
        font-size: 1.1rem;
    }

    /* Harvest-specific styling */
    .harvest-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--color-foliage), #45a049);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    @@media (max-width: 768px) {
        .page-container {
            margin: 20px auto;
        }

        .page-header {
            padding: 20px;
        }

        .page-header h2 {
            font-size: 1.5rem;
        }

        .info-card {
            padding: 20px;
        }

        .harvest-details {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="page-container">
    <div class="page-header">
        <h2><i class="fas fa-seedling"></i> Send Harvest to Products</h2>
        <p>Transfer harvested crops to your products inventory for distribution</p>
    </div>

    <div class="info-card">
        <h3><i class="fas fa-apple-alt"></i> Harvest Information</h3>

        <div class="harvest-details">
            <div class="detail-item">
                <strong><i class="fas fa-leaf"></i> Harvest Name</strong>
                <span>@Model.HarvestName</span>
            </div>
            <div class="detail-item">
                <strong><i class="fas fa-weight"></i> Available Quantity</strong>
                <span class="quantity-highlight">
                    <i class="fas fa-balance-scale"></i>
                    @Model.AvailableQuantity kg
                </span>
            </div>
        </div>

        <div class="info-notice">
            <i class="fas fa-check-circle"></i>
            <p>
                This harvest will be transferred to your products inventory, making it available for sale or distribution.
                Enter the quantity you wish to transfer (in kilograms).
            </p>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.PlotCropId)

            <div class="form-group">
                @Html.LabelFor(m => m.QuantityToSend, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.QuantityToSend, new
                {
                    @class = "form-control",
                    type = "number",
                    min = "1",
                    max = Model.AvailableQuantity,
                    step = "0.01",
                    placeholder = "Enter quantity in kg"
                })
                <span class="helper-text">
                    <i class="fas fa-info-circle"></i>
                    Enter a quantity between 1 and @Model.AvailableQuantity kg
                </span>
                @Html.ValidationMessageFor(m => m.QuantityToSend, "", new { @class = "text-danger" })
            </div>

            <div class="action-buttons">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-box-open"></i> Send to Products
                </button>
                <a href="@Url.Action("Dashboard", "PlotCrops", new { id = Model.PlotCropId })" class="btn btn-secondary">
                    <i class="fas fa-times-circle"></i> Cancel
                </a>
            </div>
        }
    </div>
</div>