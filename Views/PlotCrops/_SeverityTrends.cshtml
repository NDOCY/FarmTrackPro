@model IEnumerable<FarmTrack.Models.Activity>
@{
    var pestData = Model
        .Where(a => a.ActivityType == "Pest")
        .GroupBy(a => string.IsNullOrEmpty(a.Severity) ? "Unknown" : a.Severity)
        .ToDictionary(g => g.Key, g => g.Count());
    var diseaseData = Model
        .Where(a => a.ActivityType == "Disease")
        .GroupBy(a => string.IsNullOrEmpty(a.Severity) ? "Unknown" : a.Severity)
        .ToDictionary(g => g.Key, g => g.Count());
}

<div class="card severity-trends-card">
    <div class="card-header">
        <i class="fas fa-chart-bar"></i>
        <h5>Severity Trends</h5>
    </div>
    <div class="card-body">
        <canvas id="severityChart" height="200"></canvas>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var ctx = document.getElementById('severityChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Low', 'Medium', 'High', 'Critical'],
                datasets: [
                    {
                        label: 'Pests',
                        data: [
                            @(pestData.ContainsKey("Low") ? pestData["Low"] : 0),
                            @(pestData.ContainsKey("Medium") ? pestData["Medium"] : 0),
                            @(pestData.ContainsKey("High") ? pestData["High"] : 0),
                            @(pestData.ContainsKey("Critical") ? pestData["Critical"] : 0)
                        ],
                        backgroundColor: 'rgba(255, 107, 107, 0.8)',
                        borderColor: 'rgba(255, 107, 107, 1)',
                        borderWidth: 1,
                        borderRadius: 4
                    },
                    {
                        label: 'Diseases',
                        data: [
                            @(diseaseData.ContainsKey("Low") ? diseaseData["Low"] : 0),
                            @(diseaseData.ContainsKey("Medium") ? diseaseData["Medium"] : 0),
                            @(diseaseData.ContainsKey("High") ? diseaseData["High"] : 0),
                            @(diseaseData.ContainsKey("Critical") ? diseaseData["Critical"] : 0)
                        ],
                        backgroundColor: 'rgba(76, 175, 80, 0.8)',
                        borderColor: 'rgba(76, 175, 80, 1)',
                        borderWidth: 1,
                        borderRadius: 4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            padding: 20,
                            font: {
                                size: 12,
                                weight: '600'
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Occurrences',
                            font: {
                                size: 12,
                                weight: '600'
                            }
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        },
                        ticks: {
                            font: {
                                size: 11
                            }
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Severity Level',
                            font: {
                                size: 12,
                                weight: '600'
                            }
                        },
                        grid: {
                            display: false
                        },
                        ticks: {
                            font: {
                                size: 11
                            }
                        }
                    }
                }
            }
        });
    });
</script>