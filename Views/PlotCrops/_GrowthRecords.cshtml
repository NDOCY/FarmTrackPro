@model IEnumerable<FarmTrack.Models.GrowthRecord>

<div>
    <h5>Growth Tracking</h5>

    <form method="post" action="@Url.Action("AddGrowthRecord", "PlotCrops")">
        @Html.AntiForgeryToken()
        <input type="hidden" name="plotCropId" value="@ViewBag.PlotCropId" />
        <div class="form-group">
            <label>Stage</label>
            <input type="text" name="stage" class="form-control" placeholder="e.g. Germination" required />
        </div>
        <div class="form-group">
            <label>Notes</label>
            <textarea name="notes" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </form>

    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">No growth records yet.</div>
    }
    else
    {
        <table class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Stage</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.DateRecorded.ToShortDateString()</td>
                        <td>@r.Stage</td>
                        <td>@r.Notes</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
