@model IEnumerable<FarmTrack.Models.FarmTask>

<table class="table table-sm">
    <thead>
        <tr>
            <th>Task</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToString("d")</td>
                <td>
                    <span class="badge @(task.Status == "Completed" ? "bg-success" : "bg-warning")">
                        @task.Status
                    </span>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Tasks", new { id = task.TaskId }, new { @class = "btn btn-sm btn-outline-primary" })
                    @if (task.Status != "Completed")
                    {
                        @Html.ActionLink("Complete", "CompleteTask", "Tasks", new { id = task.TaskId }, new { @class = "btn btn-sm btn-outline-success" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">No tasks found for this plot crop.</div>
}