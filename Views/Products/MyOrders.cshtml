@model FarmTrack.Models.MyOrdersViewModel

@{
    ViewBag.Title = "My Orders";
    if (Session["Role"] != null && (Session["Role"].ToString() == "Admin" || Session["Role"].ToString() == "Owner"))
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout - User.cshtml";
    }
}

<style>
    :root {
        --color-earth: #8B7355;
        --color-soil: #654321;
        --color-foliage: #4CAF50;
        --color-wheat: #F5DEB3;
        --color-hay: #DAA520;
        --color-danger: #FF6B6B;
        --color-white: #FFFFFF;
        --border-radius: 12px;
        --card-shadow: 0 6px 18px rgba(0,0,0,0.1);
    }

    body {
        background-color: #F9F7F4;
    }

    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, var(--color-earth) 0%, var(--color-soil) 100%);
        border-radius: var(--border-radius);
        padding: 30px;
        margin-bottom: 30px;
        color: white;
        box-shadow: var(--card-shadow);
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 300px;
            height: 100%;
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23FFFFFF" opacity="0.1"><path d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z"/></svg>');
            background-repeat: no-repeat;
            background-position: right center;
            background-size: 250px;
            opacity: 0.15;
        }

        .page-header h1 {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .page-header .lead {
            font-size: 1.1rem;
            opacity: 0.95;
        }

    /* Filter Card */
    .filter-card {
        background: white;
        border-radius: var(--border-radius);
        padding: 25px;
        box-shadow: var(--card-shadow);
        margin-bottom: 30px;
    }

        .filter-card h5 {
            color: var(--color-soil);
            font-weight: 600;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

    .filter-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    /* Buttons */
    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--color-foliage), #45a049);
        color: white;
        box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
    }

    .btn-outline-primary {
        background: white;
        border: 2px solid var(--color-foliage);
        color: var(--color-foliage);
    }

    .btn-warning {
        background: linear-gradient(135deg, var(--color-hay), #f0ad4e);
        color: white;
    }

    .btn-outline-warning {
        background: white;
        border: 2px solid var(--color-hay);
        color: var(--color-hay);
    }

    .btn-info {
        background: linear-gradient(135deg, #17a2b8, #138496);
        color: white;
    }

    .btn-outline-info {
        background: white;
        border: 2px solid #17a2b8;
        color: #17a2b8;
    }

    .btn-success {
        background: linear-gradient(135deg, var(--color-foliage), #45a049);
        color: white;
    }

    .btn-outline-success {
        background: white;
        border: 2px solid var(--color-foliage);
        color: var(--color-foliage);
    }

    .btn-secondary {
        background: linear-gradient(135deg, #9e9e9e, #757575);
        color: white;
    }

    .btn-outline-secondary {
        background: white;
        border: 2px solid #9e9e9e;
        color: #9e9e9e;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(0,0,0,0.15);
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 0.85rem;
    }

    /* Order Card */
    .order-card {
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        margin-bottom: 25px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        .order-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.15);
            border-color: var(--color-earth);
        }

    .order-card-header {
        background: linear-gradient(135deg, var(--color-wheat), #f0e5d8);
        padding: 20px 25px;
        border-bottom: 2px solid var(--color-earth);
    }

        .order-card-header h5 {
            color: var(--color-soil);
            font-weight: 600;
            margin-bottom: 5px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

    .order-card-body {
        padding: 25px;
    }

    .order-summary {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 2px solid #f0f0f0;
    }

    .summary-item small {
        display: block;
        color: #999;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 5px;
        font-weight: 600;
    }

    .summary-item div {
        color: var(--color-soil);
        font-weight: 600;
        font-size: 1rem;
    }

    /* Quick Actions */
    .quick-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

    /* Accordion */
    .accordion {
        border-radius: 8px;
        overflow: hidden;
    }

    .accordion-button {
        background: rgba(139, 115, 85, 0.05);
        color: var(--color-soil);
        font-weight: 600;
        border: none;
    }

        .accordion-button:not(.collapsed) {
            background: linear-gradient(135deg, var(--color-earth), var(--color-soil));
            color: white;
        }

        .accordion-button:focus {
            box-shadow: none;
            border-color: transparent;
        }

    .accordion-body {
        padding: 20px;
    }

    /* Table */
    .table-responsive {
        border-radius: 8px;
        overflow: hidden;
    }

    .table {
        margin: 0;
    }

        .table thead {
            background: linear-gradient(135deg, var(--color-earth), var(--color-soil));
            color: white;
        }

            .table thead th {
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.8rem;
                border: none;
            }

        .table tbody tr {
            border-bottom: 1px solid #f0f0f0;
        }

        .table tfoot {
            background: rgba(139, 115, 85, 0.05);
            font-weight: 600;
        }

    /* Progress Bar */
    .progress {
        height: 10px;
        background-color: #e9ecef;
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-bar {
        border-radius: 10px;
        transition: width 0.6s ease;
    }

    .bg-warning {
        background-color: var(--color-hay) !important;
    }

    .bg-info {
        background-color: #17a2b8 !important;
    }

    .bg-primary {
        background-color: #3498db !important;
    }

    .bg-success {
        background-color: var(--color-foliage) !important;
    }

    .bg-danger {
        background-color: var(--color-danger) !important;
    }

    .bg-secondary {
        background-color: #6c757d !important;
    }

    /* Badges */
    .badge {
        padding: 6px 12px;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    /* Footer */
    .order-card-footer {
        background: rgba(139, 115, 85, 0.03);
        padding: 15px 25px;
        border-top: 1px solid #f0f0f0;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
    }

        .empty-state i {
            font-size: 5rem;
            color: var(--color-wheat);
            margin-bottom: 25px;
        }

        .empty-state h3 {
            color: var(--color-soil);
            margin-bottom: 15px;
            font-weight: 600;
        }

        .empty-state p {
            color: #999;
            margin-bottom: 30px;
        }


    .verification-section {
        background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
        border: 2px solid #2196F3;
        border-radius: 12px;
    }

    .verification-code-display {
        background: white;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .verification-code-display h3 {
            font-family: 'Courier New', monospace;
            color: #2196F3;
        }


    /* Responsive */
    @@media (max-width: 768px) {
        .page-header {
            padding: 20px;
        }

            .page-header h1 {
                font-size: 1.8rem;
            }

        .filter-buttons {
            flex-direction: column;
        }

            .filter-buttons .btn {
                width: 100%;
            }

        .order-summary {
            grid-template-columns: 1fr;
        }

        .quick-actions {
            flex-direction: column;
        }

            .quick-actions .btn {
                width: 100%;
            }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container mt-4">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1><i class="fas fa-shopping-bag"></i> My Orders</h1>
                <p class="lead mb-0">View and track your recent purchases</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="@Url.Action("Store")" class="btn btn-primary">
                    <i class="fas fa-store"></i> Continue Shopping
                </a>
            </div>
        </div>
    </div>

    <!-- Status Filter -->
    <div class="filter-card">
        <h5><i class="fas fa-filter"></i> Filter Orders</h5>
        <div class="filter-buttons">
            <a href="@Url.Action("MyOrders", new { statusFilter = "All" })"
               class="btn @(Model.FilterStatus == "All" || string.IsNullOrEmpty(Model.FilterStatus) ? "btn-primary" : "btn-outline-primary")">
                All Orders
            </a>
            <a href="@Url.Action("MyOrders", new { statusFilter = "Pending" })"
               class="btn @(Model.FilterStatus == "Pending" ? "btn-warning" : "btn-outline-warning")">
                Pending
            </a>
            <a href="@Url.Action("MyOrders", new { statusFilter = "Confirmed" })"
               class="btn @(Model.FilterStatus == "Confirmed" ? "btn-info" : "btn-outline-info")">
                Confirmed
            </a>
            <a href="@Url.Action("MyOrders", new { statusFilter = "Shipped" })"
               class="btn @(Model.FilterStatus == "Shipped" ? "btn-primary" : "btn-outline-primary")">
                Shipped
            </a>
            <a href="@Url.Action("MyOrders", new { statusFilter = "Delivered" })"
               class="btn @(Model.FilterStatus == "Delivered" ? "btn-success" : "btn-outline-success")">
                Delivered
            </a>
        </div>
    </div>

    <!-- Orders List -->
    @if (!Model.Orders.Any())
    {
        <div class="empty-state">
            <i class="fas fa-box-open"></i>
            <h3>No orders found</h3>
            <p>You haven't placed any orders yet.</p>
            <a href="@Url.Action("Store")" class="btn btn-primary btn-lg">
                <i class="fas fa-store"></i> Start Shopping
            </a>
        </div>
    }
    else
    {
        foreach (var order in Model.Orders)
        {
            <div class="order-card">
                <div class="order-card-header">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5>
                                <i class="fas fa-receipt"></i> Order #@order.SaleId
                                <span class="badge bg-@GetStatusBadgeColor(order.Status)">@order.Status</span>
                            </h5>
                            <small class="text-muted">Placed on @order.SaleDate.ToString("f")</small>
                        </div>
                        <div class="col-md-6 text-md-end mt-2 mt-md-0">
                            <span class="fw-bold" style="color: var(--color-soil); font-size: 1.2rem;">
                                Total: R @order.TotalAmount.ToString("F2")
                            </span>
                        </div>
                    </div>
                </div>

                <div class="order-card-body">
                    <!-- Order Summary -->
                    <div class="order-summary">
                        <div class="summary-item">
                            <small>Items</small>
                            <div>@order.ItemCount item(s)</div>
                        </div>
                        <div class="summary-item">
                            <small>Tracking Number</small>
                            <div><code>@order.TrackingNumber</code></div>
                        </div>
                        <div class="summary-item">
                            <small>Estimated Delivery</small>
                            <div>
                                @if (order.EstimatedDelivery.HasValue)
                                {
                                    <span style="color: @(order.EstimatedDelivery.Value < DateTime.Now && order.Status != "Delivered" ? "var(--color-danger)" : "var(--color-foliage)")">
                                        @order.EstimatedDelivery.Value.ToString("ddd, MMM dd")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">TBD</span>
                                }
                            </div>
                        </div>
                        <div class="summary-item">
                            <small>Customer</small>
                            <div>@order.CustomerName</div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="quick-actions">
                        <a href="@Url.Action("OrderTracking", new { id = order.SaleId })"
                           class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-info-circle"></i> Order Details
                        </a>
                        <a href="@Url.Action("OrderTrackingLive", new { id = order.SaleId })"
                           class="btn btn-outline-success btn-sm">
                            <i class="fas fa-map-marker-alt"></i> Live Tracking
                        </a>
                        <a href="@Url.Action("LiveTrackingMap", new { id = order.SaleId })"
                           class="btn btn-warning btn-sm" target="_blank">
                            <i class="fas fa-map-marked-alt"></i> Live Map
                        </a>
                        @if (order.Status == "Delivered")
                        {
                            <button class="btn btn-outline-info btn-sm" onclick="printReceipt(@order.SaleId)">
                                <i class="fas fa-print"></i> Print Receipt
                            </button>

                        }
                        <a href="mailto:support@farmtrack.com?subject=Order @order.SaleId"
                           class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-headset"></i> Support
                        </a>
                    </div>

                    @if (order.Status == "Out for Delivery" || order.Status == "Assigned to Driver")
                    {
                        <div class="verification-section mt-3 p-3 bg-light rounded">
                            <h6><i class="fas fa-shield-alt"></i> Delivery Verification</h6>

                            @if (order.Status == "Assigned to Driver")
                            {
                                <div class="alert alert-info mb-2">
                                    <i class="fas fa-info-circle"></i> Your driver will start the delivery soon. You can generate a verification code now to be ready.
                                </div>
                            }
                            else
                            {
                                <p class="mb-2">When your driver arrives, show them this code to verify delivery:</p>
                            }

                            <div id="verificationCode-@order.SaleId">
                                <div class="text-center">
                                    <div class="spinner-border spinner-border-sm" role="status"></div>
                                    <small>Loading verification code...</small>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Order Items (Collapsible) -->
                    <div class="accordion" id="accordion@(order.SaleId)">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button"
                                        data-bs-toggle="collapse" data-bs-target="#collapse@(order.SaleId)">
                                    <i class="fas fa-boxes me-2"></i> View Order Items (@order.Items.Count items)
                                </button>
                            </h2>
                            <div id="collapse@(order.SaleId)" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Product</th>
                                                    <th>Quantity</th>
                                                    <th>Price</th>
                                                    <th>Total</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in order.Items)
                                                {
                                                    <tr>
                                                        <td>@item.ProductName</td>
                                                        <td>@item.Quantity</td>
                                                        <td>R @item.Price.ToString("F2")</td>
                                                        <td>R @item.Total.ToString("F2")</td>
                                                        <td>
                                                            <div class="btn-group btn-group-sm">
                                                                <a href="@Url.Action("OrderTracking", new { id = order.SaleId })"
                                                                   class="btn btn-outline-primary">
                                                                    <i class="fas fa-eye"></i>
                                                                </a>
                                                                <a href="@Url.Action("OrderTrackingLive", new { id = order.SaleId })"
                                                                   class="btn btn-outline-success">
                                                                    <i class="fas fa-map-marker-alt"></i>
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td colspan="3" class="text-end"><strong>Grand Total:</strong></td>
                                                    <td><strong>R @order.TotalAmount.ToString("F2")</strong></td>
                                                    <td></td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Progress Bar -->
                    <div class="mt-4">
                        <div class="d-flex justify-content-between mb-2">
                            <small style="color: var(--color-soil); font-weight: 600;">Order Progress</small>
                            <small style="color: var(--color-soil); font-weight: 600;">@GetProgressPercentage(order.Status)%</small>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-@GetStatusBadgeColor(order.Status)"
                                 role="progressbar"
                                 style="width: @GetProgressPercentage(order.Status)%">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="order-card-footer">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i>
                            Last updated: @DateTime.Now.ToString("g")
                        </small>
                        <div class="btn-group">
                            <a href="@Url.Action("OrderTracking", new { id = order.SaleId })"
                               class="btn btn-sm btn-primary">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a href="@Url.Action("OrderTrackingLive", new { id = order.SaleId })"
                               class="btn btn-sm btn-success">
                                <i class="fas fa-shipping-fast"></i> Track
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <!-- Load jQuery FIRST -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // Auto-refresh page every 2 minutes to check for status updates
        setTimeout(function() {
            window.location.reload();
        }, 120000);

        function printReceipt(orderId) {
            window.open('@Url.Action("PrintReceipt", "Products")' + '?id=' + orderId, '_blank');
        }

        function updateOrderStatus(orderId, status) {
            if (confirm('Update order status?')) {
                $.post('@Url.Action("UpdateOrderStatus", "Products")', {
                    saleId: orderId,
                    status: status
                })
                .done(function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Error updating status');
                    }
                });
            }
        }

        // ✅ VERIFICATION CODE FUNCTIONS - NOW GUARANTEED TO WORK
        function loadVerificationCode(orderId) {
            console.log('Loading verification code for order:', orderId);

            $.ajax({
                url: '@Url.Action("GetCustomerVerificationCode", "Products")',
                type: 'GET',
                data: { saleId: orderId },
                success: function(response) {
                    console.log('Verification response:', response);

                    if (response.success) {
                        if (response.hasCode) {
                            // Code exists - display it
                            $('#verificationCode-' + orderId).html(
                                '<div class="text-center">' +
                                    '<div class="verification-code-display bg-white p-3 rounded border border-success">' +
                                        '<h3 class="text-primary mb-1 fw-bold" style="font-size: 2.5rem; letter-spacing: 0.5rem;">' + response.code + '</h3>' +
                                        '<small class="text-muted d-block">Generated: ' + response.generatedAt + '</small>' +
                                        '<small class="text-muted d-block">Expires: ' + response.expiresAt + '</small>' +
                                    '</div>' +
                                    '<p class="mt-3 mb-2">' +
                                        '<i class="fas fa-info-circle text-info"></i> ' +
                                        '<strong>Show this 4-digit code to your driver when they arrive</strong>' +
                                    '</p>' +
                                    '<button class="btn btn-sm btn-outline-secondary mt-2" onclick="generateNewCode(' + orderId + ')">' +
                                        '<i class="fas fa-sync"></i> Generate New Code' +
                                    '</button>' +
                                '</div>'
                            );
                        } else {
                            // No code yet - show generate button
                            $('#verificationCode-' + orderId).html(
                                '<div class="text-center">' +
                                    '<div class="alert alert-info mb-3">' +
                                        '<i class="fas fa-info-circle"></i> No verification code generated yet' +
                                    '</div>' +
                                    '<button class="btn btn-primary" onclick="generateNewCode(' + orderId + ')">' +
                                        '<i class="fas fa-key"></i> Generate Verification Code' +
                                    '</button>' +
                                '</div>'
                            );
                        }
                    } else {
                        // Error occurred
                        $('#verificationCode-' + orderId).html(
                            '<div class="alert alert-danger">' +
                                '<i class="fas fa-exclamation-triangle"></i> ' + (response.message || 'Error loading verification code') +
                            '</div>'
                        );
                    }
                },
                error: function(xhr, status, error) {
                    console.error('AJAX Error:', status, error);
                    $('#verificationCode-' + orderId).html(
                        '<div class="alert alert-danger">' +
                            '<i class="fas fa-exclamation-triangle"></i> Error connecting to server' +
                        '</div>'
                    );
                }
            });
        }

        function generateNewCode(orderId) {
            console.log('Generating new code for order:', orderId);

            // Show loading state
            $('#verificationCode-' + orderId).html(
                '<div class="text-center">' +
                    '<div class="spinner-border spinner-border-sm text-primary" role="status"></div>' +
                    '<small class="d-block mt-2">Generating code...</small>' +
                '</div>'
            );

            $.ajax({
                url: '@Url.Action("GenerateDeliveryCode", "Products")',
                type: 'POST',
                data: { saleId: orderId },
                success: function(response) {
                    console.log('Generate response:', response);

                    if (response.success) {
                        // Show success message briefly, then reload
                        $('#verificationCode-' + orderId).html(
                            '<div class="alert alert-success">' +
                                '<i class="fas fa-check-circle"></i> ' + response.message +
                            '</div>'
                        );

                        // Reload the verification code display after 1 second
                        setTimeout(function() {
                            loadVerificationCode(orderId);
                        }, 1000);
                    } else {
                        $('#verificationCode-' + orderId).html(
                            '<div class="alert alert-danger">' +
                                '<i class="fas fa-times-circle"></i> ' + response.message +
                            '</div>'
                        );
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Generate Error:', status, error);
                    $('#verificationCode-' + orderId).html(
                        '<div class="alert alert-danger">' +
                            '<i class="fas fa-exclamation-triangle"></i> Error generating code. Please try again.' +
                        '</div>'
                    );
                }
            });
        }

        // Initialize verification codes when document is ready
        $(document).ready(function() {
            @foreach (var order in Model.Orders)
            {
                if (order.Status == "Out for Delivery" || order.Status == "Assigned to Driver")
                {
                    <text>loadVerificationCode(@order.SaleId);</text>
                }
            }
        });
    </script>
}

@functions {
    public string GetStatusBadgeColor(string status)
    {
        switch (status)
        {
            case "Pending": return "warning";
            case "Confirmed": return "info";
            case "Shipped": return "primary";
            case "Delivered": return "success";
            case "Cancelled": return "danger";
            default: return "secondary";
        }
    }

    public int GetProgressPercentage(string status)
    {
        switch (status)
        {
            case "Pending": return 20;
            case "Confirmed": return 40;
            case "Shipped": return 70;
            case "Delivered": return 100;
            case "Cancelled": return 0;
            default: return 10;
        }
    }
}